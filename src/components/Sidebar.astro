---
import logo from '../assets/logo-only.png';
import { BiHomeAlt2, BiBookContent, BiStar, BiMessage, BiAnchor } from "react-icons/bi";
---

<div class="w-[130px] h-full fixed flex flex-col items-center justify-between py-10 z-10">
    <span class="absolute top-0 right-0 w-[1px] h-[100%] gradient-sidebar"></span>
    <div class="logo">
        <img src={logo.src} alt="Logo Only" id="logo">
    </div>
    <ul class="flex flex-col items-center gap-5">
        <li>
            <a href="/" class="bg-red-500 w-10 h-10"><BiHomeAlt2 className="text-gray-500 transition-all hover:bg-gray-300 hover:scale-90 active w-10 h-10 p-2 rounded-full" /></a>
        </li>
        <li>
            <a href="/books" class="bg-red-500 w-10 h-10"><BiBookContent className="text-gray-500 transition-all hover:bg-gray-300 hover:scale-90 w-10 h-10 p-2 rounded-full" /></a>
        </li>
        <li>
            <a href="/weare" class="bg-red-500 w-10 h-10"><BiAnchor className="text-gray-500 transition-all hover:bg-gray-300 hover:scale-90 w-10 h-10 p-2 rounded-full" /></a>
        </li>
        <li>
            <a href="/contact" class="bg-red-500 w-10 h-10"><BiMessage className="text-gray-500 transition-all hover:bg-gray-300 hover:scale-90 w-10 h-10 p-2 rounded-full" /></a>
        </li>
    </ul>
    <button type="button">W</button>
</div>
<style scoped>
    .active {
        color: white;
        background: #E16267;
    }
    .gradient-sidebar {
        background: linear-gradient(to bottom, rgba(128, 128, 128, 0) 0%, rgba(128, 128, 128, 1) 50%, rgba(0, 0, 0, 0) 100%);
    }
    #logo {
        filter: brightness(0) saturate(100%) invert(37%) sepia(3%) saturate(0%) hue-rotate(193deg) brightness(98%) contrast(97%);
        width: 50px;
    }
</style>